{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017"],
    "allowJs": true,
    "checkJs": true,
    "strict": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "types": ["jest", "node"],
    "noEmit": true,
    "declaration": false,
    "esModuleInterop": true,
  },
  "include": ["src"],
  "exclude": ["**/*.test.js", "*.testdata.*"]
}